---
import '../styles/style.css';
const { titulo } = Astro.props;

// Lógica para la barra amarilla del menú
const pathname = Astro.url.pathname;
const currentPath = pathname.slice(1); 
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>{titulo} | Colegio Crismag - Profa. Martha Garay de Castillo</title>
    <meta name="description" content="Bienvenidos al Colegio Crismag en San Miguel. Formación cristiana integral desde Parvularia hasta Bachillerato.">
    
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.colegiocrismag.com/" />
    <meta property="og:title" content="Colegio Crismag - Excelencia Académica y Valores" />
    <meta property="og:image" content="https://www.colegiocrismag.com/images/logo.png" />

    <link rel="icon" href="/images/logo.png" type="image/png">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;700&family=Nunito:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="preload" as="image" href="/images/hero-bg.webp">
    <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TU-CODIGO-AQUI"></script>
    <script is:inline>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        // REEMPLAZA ESTO CON TU CÓDIGO REAL QUE EMPIEZA CON G-
        gtag('config', 'G-LDY65Y2R9Q');
    </script>
</head>
</head>
<body>
    
    <header class="header">
        <nav class="nav contenedor">
            <a href="/" class="logo-enlace">
                <img 
                    src="/images/logo.png" 
                    alt="Logo Colegio Crismag" 
                    class="logo-img" 
                    width="70" 
                    height="70"
                >
            </a>
            <button class="nav-toggle" aria-label="Abrir menú"><i class="fas fa-bars"></i></button>
            <ul class="nav-menu">
                <li><a href="/" class={currentPath === "" ? "active" : ""}>Inicio</a></li>
                <li><a href="/quienes-somos" class={currentPath.startsWith("quienes-somos") ? "active" : ""}>Nosotros</a></li>
                <li><a href="/#oferta-educativa">Oferta Educativa</a></li>
                <li><a href="/noticias" class={currentPath.startsWith("noticias") ? "active" : ""}>Noticias</a></li>
                <li><a href="/contacto" class={currentPath.startsWith("contacto") ? "active" : ""}>Contacto</a></li>
            </ul>
        </nav>
    </header>

    <slot />

    <footer class="footer">
        <div class="contenedor">
            <div class="footer-contenido">
                <p>© 2025 Colegio Crismag - Profa. Martha Garay de Castillo.</p>
                <div class="redes-sociales">
                    <a href="https://www.facebook.com/crismag.sanmiguel" target="_blank" aria-label="Facebook"><i class="fa-brands fa-facebook-f"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <a href="#" id="btn-volver-arriba"><i class="fas fa-arrow-up"></i></a>
    
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.7.2/lightgallery.min.js"></script>
    <script is:inline src="/main.js"></script>
</body>
</html>